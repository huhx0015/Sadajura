<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    tools:context=".SignUpActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
            
    <EditText
        android:id="@+id/cj_username_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
    	android:lines="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:ems="10"
        android:hint="@string/username_hint"
        android:inputType="textVisiblePassword" 
        android:minHeight="@dimen/text_view_vertical_height"
        android:background="@drawable/edittext" />

    <EditText
        android:id="@+id/cj_password_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:lines="1"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cj_username_field"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:ems="10"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:minHeight="@dimen/text_view_vertical_height"
        android:background="@drawable/edittext" />
    
    <EditText
        android:id="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:lines="1"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cj_password_field"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:ems="10"
        android:hint="@string/email_hint"
        android:inputType="textVisiblePassword" 
        android:minHeight="@dimen/text_view_vertical_height"
        android:background="@drawable/edittext" />
    
     <TextView
        android:id="@+id/termsPrivacyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_below="@+id/emailField"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:linksClickable="true"
        android:textColor="#000000"
        android:textSize="14sp" />

    <Button
		android:id="@+id/cj_signup_btn"
	    android:layout_width="fill_parent"
	    android:layout_height="52dp"
	    android:layout_below="@+id/termsPrivacyTextView"
	    android:layout_marginTop="24dp"
	    android:gravity="center"
		android:text="Sign Up"
		android:textColor="#000000"
		android:textSize="21sp"
		android:background="@drawable/signupbtn" />
    
	</RelativeLayout>
</ScrollView>
