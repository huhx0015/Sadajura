<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CJLoginActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/cj_login_activity_layout">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/cj_toolbar_drop_shadow"
        android:id="@+id/cj_login_container_drop_shadow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:id="@+id/cj_login_scrollview_container">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp"
            android:id="@+id/cj_login_container">

            <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:id="@+id/cj_login_logo"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher" />

            <EditText
                android:id="@+id/cj_username_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:lines="1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:ems="10"
                android:hint="@string/username_hint"
                android:inputType="textVisiblePassword"
                android:minHeight="@dimen/text_view_vertical_height"
                android:background="@drawable/edittext" />

            <EditText
                android:id="@+id/cj_password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:lines="1"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/cj_username_field"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:ems="10"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:minHeight="@dimen/text_view_vertical_height"
                android:background="@drawable/edittext" />

            <Button
                android:id="@+id/cj_login_button"
                android:layout_width="256dp"
                android:layout_height="52dp"
                android:layout_below="@+id/cj_password_field"
                android:gravity="center"
                android:text="Log In"
                android:textColor="@android:color/white"
                android:textSize="21sp"
                android:background="@drawable/cj_rounded_light_pink_button"
                android:layout_gravity="center"
                android:typeface="sans"
                android:layout_marginTop="54dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/cj_signup_btn"
                android:layout_width="256dp"
                android:layout_height="52dp"
                android:layout_below="@+id/cj_login_button"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="@android:color/white"
                android:textSize="21sp"
                android:background="@drawable/cj_rounded_dark_pink_button"
                android:layout_gravity="center"
                android:typeface="sans"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/cj_reset_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cj_signup_btn"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:text="@string/reset_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
