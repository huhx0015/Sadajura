<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
    	xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
        android:overScrollMode="never"
    	android:background="#efeff4"
    	tools:context=".SettingsActivity" >
    
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:background="#efeff4" >
    
    <com.parse.ParseImageView
        android:id="@+id/profileImage"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_profile_main" />
    
    <TextView
        android:id="@+id/userName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/currentAccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="40dp"
        android:text="CURRENT ACCOUNT:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6d6d72"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/currentAccountList"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:listSelector="@drawable/list_item_selector" >

    </ListView>
    
    <TextView
        android:id="@+id/spreadTheWord"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="SPREAD THE WORD:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6d6d72"
        android:textSize="14sp" />
        
    <ListView
        android:id="@+id/spreadTheWordList"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:listSelector="@drawable/list_item_selector"
        android:divider="@null"
        android:dividerHeight="0dp" >

    </ListView>
    
    <TextView
        android:id="@+id/moreInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="MORE INFO:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6d6d72"
        android:textSize="14sp" />
        
    <ListView
        android:id="@+id/moreInfoList"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:listSelector="@drawable/list_item_selector" >

    </ListView>
    
    <TextView
        android:id="@+id/contactUs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="CONTACT US:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#6d6d72"
        android:textSize="14sp" />
        
    <ListView
        android:id="@+id/contactUsList"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:listSelector="@drawable/list_item_selector"
        android:divider="@null"
        android:dividerHeight="0dp" >

    </ListView>

    <TextView
        android:id="@+id/appVersion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="YourAppName Version 1.0"
        android:textColor="#6d6d72"
        android:textSize="12sp" />

	</LinearLayout>
</ScrollView>